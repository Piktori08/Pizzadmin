@model IEnumerable<Pizzadmin.Data.Product>;
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var no = 0;
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h4 class="card-title">Product List</h4>
            </div>
            <div class="col-md-6">
                <a class="btn btn-primary float-right" asp-action="Create"><i class="fa-solid fa-circle-plus"></i> Create</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead class="text-primary">
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Price
                        </th>
                        <th class="text-right">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        no++;
                        <tr>
                            <td>@no</td>
                            <td>@p.Name</td>
                            <td>@p.Description</td>
                            <td>$@p.Price</td>
                            <td class="text-right">
                                <a asp-action="Edit" asp-route-id="@p.Id" data-toggle="tooltip" data-placement="top" title="Change">
                                    <i class="fa fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@p.Id" data-toggle="tooltip" data-placement="top" title="Remove">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <style>
        .card {
            width: 90%;
            margin-left: 5%;
        }
    </style>
}