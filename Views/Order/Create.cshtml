@model Pizzadmin.Models.OrderForCreation;
@{
    ViewData["Title"] = "Create Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Create Order</h1>
    </div>

    <div class="row">
        <div class="col-md-9">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <input type="hidden" value="@product.Id" name="productId"/>
                    <div class="col-md-3 mb-4">
                        <div class="card h-90 product-card">
                            <div class="card-img-container position-relative">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                                }
                                else
                                {
                                    <div class="no-image-placeholder">
                                        <i class="fas fa-image"></i>
                                        <span>No Image</span>
                                    </div>
                                }
                                <!-- Action Icons -->

                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title" id="productName-@product.Id">@product.Name</h5>
                                <p class="card-text flex-grow-1">@product.Description</p>
                                <div class="mt-auto">
                                    <h4 class="text-primary mb-3">$<span id="productPrice-@product.Id">@product.Price.ToString("F2")</span></h4>
                                    <div class="card-actions">
                                        <a onclick="minus('@product.Id')" href="#" class="productP">
                                            <i class="fa-solid fa-minus"></i>
                                        </a>
                                        <input type="number" class="form-control" />
                                        <a onclick="plus('@product.Id')" href="#" class="productP">
                                            <i class="fa-solid fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card total-card">
                <div class="card-header">
                    <h4 class="card-title">Total</h4>
                </div>
                <div class="card-body">
                    <div class="total-body">
                        @* <div class="row">
                            <div class="col-md-6">
                                <span>
                                    Big bugrer
                                </span>
                            </div>
                            <div class="col-md-2">
                                <span>2</span>
                            </div>
                            <div class="col-md-4">
                                <span>$28.00</span>
                            </div>
                        </div> *@
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-md-12 totalPrice">
                            <h5>Total Price: $50</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



