@model IEnumerable<Pizzadmin.Data.OrderProduct>
@{
    ViewData["Title"] = "View Receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-center align-items-center">
    <div class="card col-md-6">
        <div class="card-header">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="mt-2">@Model.Select(op => op.Order?.OrderNumber).FirstOrDefault()</h2>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4>Product</h4>
                </div>
                <div class="col-md-3 text-end">
                    <h4>Quantity</h4>
                </div>
                <div class="col-md-3 text-end">
                    <h4>Price</h4>
                </div>
            </div>
            @foreach (var orderProduct in Model)
            {
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p>@orderProduct?.Product?.Name</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <p>@orderProduct?.Quantity</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <p>$@(orderProduct?.Quantity * orderProduct?.Product?.Price)</p>
                    </div>
                </div>
            }
            <hr />
            <div class="row">
                <div class="col-md-9">
                    <h4>Total Price:</h4>
                </div>
                <div class="col-md-3 text-end">
                    <h4>
                        <b>
                            @Model.Sum(op => op.Quantity * op.Product.Price).ToString("C")
                        </b>
                    </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-primary" asp-action="Index">
                        <i class="fas fa-arrow-left"></i> Return
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
