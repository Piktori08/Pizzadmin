@model IEnumerable<Pizzadmin.Data.Order>;
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var no = 0;
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h4 class="card-title">Order List</h4>
            </div>
            <div class="col-md-6">
                <a class="btn btn-primary float-right" asp-action="Create"><i class="fa-solid fa-circle-plus"></i> Create</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped" id="example" style="display: none;">
                <thead class="text-primary">
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Created At
                        </th>
                        <th>
                            Status
                        </th>
                        <th class="text-right">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        no++;
                        <tr>
                            
                            <td>@no</td>
                            <td>
                                <span class="badge badge-pill badge-primary">
                                    <a asp-action="ViewReceipt" asp-route-orderId="@p.Id" class="text-white" style="font-size: medium">@p.OrderNumber</a>
                                </span>
                            </td>
                            <td>$@p.TotalPrice</td>
                            <td>@p.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="status-cell">
                                <button class="btn btn-sm @(p.IsSeen ? "btn-success" : "btn-secondary") seen-btn"
                                        data-id="@p.Id"
                                        title="@(p.IsSeen ? "Order Seen" : "Mark as Seen")">
                                    <i class="fas fa-eye"></i>
                                </button>

                                <button class="btn btn-sm @(p.IsCompleted ? "btn-primary" : "btn-secondary") complete-btn"
                                        data-id="@p.Id"
                                        title="@(p.IsCompleted ? "Order Completed" : "Mark as Completed")">
                                    <i class="fas fa-check"></i>
                                </button>
                            </td>
                            <td class="text-right">
                                <a asp-action="Delete" asp-route-id="@p.Id" data-toggle="tooltip" data-placement="top" title="Remove">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            width: 90%;
            margin-left: 5%;
        }

        .badge-primary {
            background: #f96332 !important;
            color: #fff !important;
        }

        button.dt-paging-button:hover {
            background: #f96332 !important;
            color: #fff !important;
        }

        button.dt-paging-button.current {
            background: #f96332 !important;
            color: white !important;
            border-color: #f96332 !important;
        }

        button.dt-paging-button.disabled {
            background-color: #e9ecef !important;
            color: #6c757d !important;
            cursor: not-allowed;
        }
    </style>

    <!-- Remove the inline script since we're hiding in HTML now -->

    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#example').DataTable({
                "initComplete": function() {
                    // Show table with fade in effect
                    $('#example').show().hide().fadeIn(300);
                }
            });

            // Toggle Seen
            $('#example').on('click', '.seen-btn', function () {
                const btn = $(this);
                const id = btn.data('id');

                $.post('/Order/MarkSeen', { id: id }, function (res) {
                    if (res.success) {
                        if (res.isSeen) {
                            btn.removeClass('btn-secondary').addClass('btn-success')
                               .attr('title', 'Order Seen');
                        } else {
                            btn.removeClass('btn-success').addClass('btn-secondary')
                               .attr('title', 'Mark as Seen');
                        }
                    }
                });
            });

            // Toggle Completed
            $('#example').on('click', '.complete-btn', function () {
                const btn = $(this);
                const id = btn.data('id');

                $.post('/Order/MarkCompleted', { id: id }, function (res) {
                    if (res.success) {
                        if (res.isCompleted) {
                            btn.removeClass('btn-secondary').addClass('btn-primary')
                               .attr('title', 'Order Completed');
                        } else {
                            btn.removeClass('btn-primary').addClass('btn-secondary')
                               .attr('title', 'Mark as Completed');
                        }
                    }
                });
            });
        });
    </script>
}